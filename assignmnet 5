class Vehicle:
    def __init__(self, brand, year):
        self.brand = brand
        self.year = year
        print(f"Vehicle initialized: {self.year} {self.brand}")

    def get_info(self):
        return f"This is a {self.year} {self.brand} vehicle."

    def start_engine(self):
        return f"The {self.brand}'s engine starts."


class Car(Vehicle):
    def __init__(self, brand, year, model, num_doors):
        super().__init__(brand, year)  # Initialize the base Vehicle class
        self.model = model
        self.num_doors = num_doors
        print(f"Car initialized: {self.year} {self.brand} {self.model}")

    def get_info(self): # Overriding get_info from Vehicle
        base_info = super().get_info()
        return f"{base_info} It's a {self.model} with {self.num_doors} doors."

    def drive(self):
        return f"The {self.model} is driving on the road."


class SportsCar(Car):
    def __init__(self, brand, year, model, num_doors, top_speed, horsepower):
        super().__init__(brand, year, model, num_doors) # Initialize the Car class
        self.top_speed = top_speed
        self.horsepower = horsepower
        print(f"Sports Car initialized: {self.year} {self.brand} {self.model}")

    def get_info(self): # Further overriding get_info from Car
        base_info = super().get_info()
        return f"{base_info} It's a high-performance sports car with {self.horsepower} HP and a top speed of {self.top_speed} mph."

    def race(self):
        return f"The {self.model} is racing at exhilarating speeds!"



